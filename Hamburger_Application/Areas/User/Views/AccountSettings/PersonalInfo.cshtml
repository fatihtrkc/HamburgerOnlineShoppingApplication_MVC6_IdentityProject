@{
    Layout = "~/Areas/User/Views/AccountLayout/Index.cshtml";
}

@model AppUserPersonalInfoVM


<div class="col-md-10" style="margin-top: 40px;background-color: transparent; font-family:'Indie Flower'">
    <form asp-action="PersonalInfo" method="post" class="form-group justify-content-between text-center" style="font-family:'Indie Flower'">
        <h2 style="color:rgb(244,147,1)">My Personal Info</h2>
        <br />
        <div class="" style="font-size:22px">
            <input type="text" asp-for="FirstName" class="form-control" placeholder="Name" />
            <br />
            <input type="text" asp-for="LastName" class="form-control" placeholder="Surname" />
            <br />
            <input type="text" asp-for="UserName" class="form-control" placeholder="Username" />
            <input type="hidden" asp-for="Email" />
        </div>
        <div asp-validation-summary="All"></div>
        <br />
        <div class="form-group mb-3">
            <button class="btn btn-primary d-block w-100" id="submitButton" type="submit" style="color: rgb(255,255,255);background: rgb(244,147,1); font-family:'Indie Flower'">Update</button>
            <br>
        </div>
    </form>
</div>


@section Scripts{
    <script src="~/js/bootstrap.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
}
